@model CharityProject.Models.charter

<div class="modal fade" id="detailModal-@Model.charter_id" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header flex justify-content-center">
                <h4>معلومات العهدة  #@Model.charter_id</h4>
            </div>
            <div class="modal-body align-content-center">
                <div class="col-md text-right my-1" dir="rtl">
                    <div>
                        <dl class="row text-center">
                            <dt class="col-sm-4 mb-2">
                                معلومات العهدة
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.charter_info)
                            </dd>
                            <dt class="col-sm-4 mb-2">
                                القسم
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.from_departement_name)
                            </dd>
                            <dt class="col-sm-4 mb-2">
                               إلى الموظف 
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.employee.name)
                            </dd>

                            <dt class="col-sm-4 mb-2">
                                الرقم التسلسلي
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.serial_number)
                            </dd>
                            <dt class="col-sm-4 mb-2">
                                تاريخ الإنشاء 
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.creation_date)
                            </dd>

                            <dt class="col-sm-4 mb-2">
                                تاريخ الاستلام
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                @Html.DisplayFor(model => model.receive_date)
                            </dd>
                            
                        </dl>
                    </div>
                    <div class="flex mt-5 justify-center">
                       
                    </div>
                    <div class="flex justify-center">
                        <button data-dismiss="modal" type="button" class="text-white bg-dark hover:bg-dark focus:ring-4 focus:ring-gray-600 transition duration-300 ease-in-out font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-600 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800">إخفاء</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                
                