@model IEnumerable<CharityProject.Models.HolidayHistory>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMOW2O7enG7B5yoXKyzP4KdxGGWgHqjc7MJ6nMi" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com/" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap"
          rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Divs</title>
    <style>
        body {
            background-color: #DFDFDF;
            margin: 0;
            padding: 0;
            font-family: 'Cairo', sans-serif;
        }

       

       

        .btn {
            background-color: #86efac;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            display: flex;
            justify-content: center;
            gap: 100px;
            margin-top: 15px;
        }
        

            .container > div {
                background-color: #8AC4AE;
                color: white;
                width: 250px;
                height: 100px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                border-radius: 15px;
                text-align: center;
              margin-bottom:auto;
                
            }

        p {
            margin: 0;
        }

        /* Right-to-left text direction for table headers */
        

        .search-container {
            margin-top:25px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        

        /* Left-to-right text alignment for buttons */
        .btn {
            text-align: center;
        }

        
    </style>
    <script>
        async function search() {
            const query = document.getElementById('searchInput').value;
            try {
                const response = await fetch(`api/HolidayHistoriesAPI?query=${encodeURIComponent(query)}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const results = await response.json();
                displayResults(results);
            } catch (error) {
                console.error('Error fetching search results:', error);
            }
        }

        function displayResults(results) {
            const tbody = document.querySelector('tbody');
            tbody.innerHTML = ''; // Clear previous results
            if (results.length === 0) {
                const noResultsMessage = `<tr><td colspan="7" class="no-results">No results found.</td></tr>`;
                tbody.innerHTML = noResultsMessage;
            } else {
                const rows = results.map(result => {
                    return `<tr>
                                        <td>${result.holidays_history_id}</td>
                                        <td>${result.start_date}</td>
                                        <td>${result.end_date}</td>
                                        <td>${result.duration}</td>
                                        <td>${result.holiday.type}</td>
                                        <td>${result.status}</td>
                                        <td><button class="btn">عرض</button></td>
                                    </tr>`;
                }).join('');
                tbody.innerHTML = rows;
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="col-md-6 ">
            المتبقي من الاضطرارية
            <p>5</p>
        </div>
        <div class="col-md-6">
            المتبقي من السنوية
            <p>5</p>
        </div>
        <div class="col-md-6">
            المتبقي من المرضية
            <p>5</p>
        </div>
    </div>
    <br />
    
        <div class="search-container ">
            <select>
                <option value="default">من الاقدم للاحدث</option>
            </select>
           
            <input type="text" onchange="search()"  id="searchInput" placeholder="رقم الاجازة" />

            <input type="button" value="اضافة اجازة +" class="" style="margin-left:320px;background-color:#248277;color:white;width:150px;height:40px;border-radius:10px; margin-bottom: -10px;" />

        </div>
        <br />
        <br />

    <div class="overflow-x-auto bg-layoutDivThird mt-3 rounded-lg" dir="rtl">
        <table class="table text-center rtl " >
            <!-- head -->
            <thead>
                <tr>
                    <th>رقم الطلب</th>
                    <th>التاريخ</th>
                    <th>من</th>
                    <th>عدد الايام</th>
                    <th>نوع الاجازة</th>
                    <th>الحالة</th>
                    <th>عرض</th>
                </tr>
            </thead>
            <tbody>

                <!-- row 1 -->
                @foreach (var item in   Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.holiday.holiday_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emp_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.holiday.type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="@("#detailModal-" + @item.holiday.holiday_id)">Detail</button>
                            @await Html.PartialAsync("_details_holidays", item)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
 
</body>
</html>