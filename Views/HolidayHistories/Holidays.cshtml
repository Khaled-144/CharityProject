@model IEnumerable<CharityProject.Models.HolidayHistory>
<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Divs</title>
   
    <script>
        async function search() {
            const query = document.getElementById('searchInput').value;
            try {
                const response = await fetch(`api/HolidayHistoriesAPI?query=${encodeURIComponent(query)}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const results = await response.json();
                displayResults(results);
            } catch (error) {
                console.error('Error fetching search results:', error);
            }
        }

        function displayResults(results) {
            const tbody = document.querySelector('tbody');
            tbody.innerHTML = ''; // Clear previous results
            if (results.length === 0) {
                const noResultsMessage = `<tr><td colspan="7" class="no-results">No results found.</td></tr>`;
                tbody.innerHTML = noResultsMessage;
            } else {
                const rows = results.map(result => {
                    return `<tr>
                                        <td>${result.holidays_history_id}</td>
                                        <td>${result.start_date}</td>
                                        <td>${result.end_date}</td>
                                        <td>${result.duration}</td>
                                        <td>${result.holiday.type}</td>
                                        <td>${result.status}</td>
                                        <td><button class="btn">عرض</button></td>
                                    </tr>`;
                }).join('');
                tbody.innerHTML = rows;
            }
        }
    </script>
</head>
<body>
    <div class="top-info flex  justify-evenly  text-2xl text-center my-10 ">
        <div class="w-56 h-24 shadow-md bg-layoutDivSecondary rounded-lg px-2 py-2">
            <p>20</p>
            <p>تحت الاجراء</p>
        </div>
        <div class="w-56 h-24 shadow-md bg-layoutDivSecondary rounded-lg px-2 py-2 mx-10">
            <p>20</p>
            <p>جميع المعاملات</p>
        </div>
        <div class="w-56 h-24 shadow-md bg-layoutDivSecondary px-2 py-2 rounded-lg">
            <p>20</p>
            <p>مكتملة</p>
        </div>
    </div>
    <br />
    
        <div class="search-container mb-5 flex justify-between">
            <div>
            <select>
                <option value="default">من الاقدم للاحدث</option>
            </select>
           
            <input type="text" onchange="search()"  id="searchInput" placeholder="رقم الاجازة" />
        </div>
        <button type="button" data-toggle="modal" data-target="#insertHolidayModal" data-target="#insertModal" id="modal-toggle-button" class="model-button bg-primaryButtons flex-initial hover:bg-emerald-800 text-white font-bold px-5 border rounded transition duration-300 ease-in-out " data-modal-target="crud-modal" data-modal-toggle="crud-modal">
           اضافة اجازة+
        </button>
        @await Html.PartialAsync("_Create_Holiday", new HolidayHistory())
        </div>
       

    <div class="overflow-x-auto bg-layoutDivThird  rounded-lg" dir="rtl" >
        <table class="table text-center rtl " >
            <!-- head -->
            <thead>
                <tr>
                    <th>رقم الطلب</th>
                    <th>التاريخ</th>
                    <th>من</th>
                    <th>عدد الايام</th>
                    <th>نوع الاجازة</th>
                    <th>الحالة</th>
                    <th>عرض</th>
                </tr>
            </thead>
            <tbody>

                <!-- row 1 -->
                @foreach (var item in   Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.holidays_history_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emp_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.holiday.type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="@("#detailModal-" + item.holidays_history_id)">Detail</button>
                            @await Html.PartialAsync("_details_holidays",item)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/js/site.js">
    </script>
    <script src="../path/to/flowbite/dist/flowbite.min.js"></script>
</body>
</html>
