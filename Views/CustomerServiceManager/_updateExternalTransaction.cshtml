@model CharityProject.Models.ExternalTransaction

@{
    ViewData["Title"] = "Update External Transaction";
}

<div class="modal fade" id="updateModal-@Model.external_transactions_id" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="max-w-3x4 mx-auto bg-white rounded-lg shadow-md p-6 modal-dialog modal-xl modal-content">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">تحديث المعاملة الخارجية #@Model.external_transactions_id</h2>
        <form asp-action="UpdateExternalTransaction" method="post">
            <input type="hidden" asp-for="external_transactions_id" />

            <!-- Fields for other transaction details -->
            <div class="grid md:grid-cols-2 md:gap-6">
                <div class="mb-6">
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900">الاسم</label>
                    <input type="text" id="name" asp-for="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                    <span asp-validation-for="name" class="text-red-600"></span>
                </div>
                <div class="mb-6">
                    <label for="identity_number" class="block mb-2 text-sm font-medium text-gray-900">رقم الهوية</label>
                    <input type="text" id="identity_number" asp-for="identity_number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                    <span asp-validation-for="identity_number" class="text-red-600"></span>
                </div>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
                <div class="mb-6">
                    <label for="status" class="block mb-2 text-sm font-medium text-gray-900">الحالة</label>
                    <select id="status" asp-for="status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                        <option selected disabled></option>
                        <option value="غير مؤهل سكني">غير مؤهل سكني</option>
                        <option value="تم تسجيله بالمنصة">تم تسجيله بالمنصة</option>
                        <option value="تم دعمه وحدة من جهة أخرى">تم دعمه وحدة من جهة أخرى</option>
                        <option value="غير مؤهل بالضمان الاجتماعي">غير مؤهل بالضمان الاجتماعي</option>
                        <option value="خارج المدينة">خارج المدينة</option>
                    </select>
                    <span asp-validation-for="status" class="text-red-600"></span>
                </div>
                <div class="mb-6">
                    <label for="communication" class="block mb-2 text-sm font-medium text-gray-900">التواصل</label>
                    <select id="communication" asp-for="communication" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                        <option selected disabled></option>
                        <option value="تم التواصل">تم التواصل</option>
                        <option value="لم يتم التواصل">لم يتم التواصل</option>
                    </select>
                    <span asp-validation-for="communication" class="text-red-600"></span>
                </div>
            </div>

            <div class="mb-6">
                <label for="case_status" class="block mb-2 text-sm font-medium text-gray-900">دراسة/ارسال الحالة</label>
                <select id="case_status" asp-for="case_status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    <option selected disabled></option>
                    <option value="تم دراسة الحالة">تم دراسة الحالة</option>
                    <option value="تم ارسال الحالة">تم ارسال الحالة للجهة</option>
                </select>
                <span asp-validation-for="case_status" class="text-red-600"></span>
            </div>

            <div class="mb-6">
                <label for="sending_party" class="block mb-2 text-sm font-medium text-gray-900">الجهة المحالة</label>
                <select id="sending_party" asp-for="sending_party" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    <option selected disabled></option>
                    <option value="مركز التنمية الاجتماعية">مركز التنمية الاجتماعية</option>
                    <option value="مدير ادارة تنمية المجتمع">مدير ادارة تنمية المجتمع</option>
                    <option value="مجلس الجمعيات">مجلس الجمعيات</option>
                    <option value="وزارة الشؤون البلدية والقروية والاسكان">وزارة الشؤون البلدية والقروية والاسكان</option>
                </select>
                <span asp-validation-for="sending_party" class="text-red-600"></span>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
                <div class="mb-6">
                    <label for="receiving_date" class="block mb-2 text-sm font-medium text-gray-900">تاريخ الوارد</label>
                    <input type="date" id="receiving_date" asp-for="receiving_date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    <span asp-validation-for="receiving_date" class="text-red-600"></span>
                </div>
                <div class="mb-6">
                    <label for="sending_date" class="block mb-2 text-sm font-medium text-gray-900">تاريخ الصادر</label>
                    <input type="date" id="sending_date" asp-for="sending_date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    <span asp-validation-for="sending_date" class="text-red-600"></span>
                </div>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
                <div class="mb-6">
                    <label for="receiving_number" class="block mb-2 text-sm font-medium text-gray-900">رقم الوارد</label>
                    <input type="text" id="receiving_number" asp-for="receiving_number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    <span asp-validation-for="receiving_number" class="text-red-600"></span>
                </div>
                <div class="mb-6">
                    <label for="sending_number" class="block mb-2 text-sm font-medium text-gray-900">رقم الصادر</label>
                    <input type="text" id="sending_number" value="@Model.external_transactions_id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" disabled>
                </div>

            </div>

            <div class="flex items-center  justify-center">
                <button type="submit" class="btn btn-primary mx-2">تحديث</button>
                <button type="button" class="btn btn-dark" data-dismiss="modal">إخفاء</button>

            </div>
        </form>
    </div>
</div>
