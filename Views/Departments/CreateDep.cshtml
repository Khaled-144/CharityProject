@model CharityProject.Models.Department

<div class="modal fade" id="CreateDepartmentModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">تعديل القسم</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-right">
                <form asp-action="Create"  method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                   

                    <div class="form-group">
                        <label asp-for="departement_name" class="control-label">اسم القسم</label>
                        <input asp-for="departement_name" class="form-control" />
                        <span asp-validation-for="departement_name" class="text-danger"></span>
                    </div>

                 

                    <div class="form-group">
                        <label for="supervisor_id" class="control-label">اختر مدير</label>
                        <select asp-for="supervisor_id" name="supervisor_id" id="supervisor_id" class="form-control">
                            <option value="" disabled selected>اختر مدير</option>
                            @foreach (var employee in ViewBag.Employees)
                            {
                                @if (employee.employee_id != Model.supervisor_id)
                                {
                                    <option value="@employee.employee_id" >
                                        @employee.name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="supervisor_id" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-sm">إنشاء</button>
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">الغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
