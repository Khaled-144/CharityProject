@{
    var employeeList = ViewData["EmployeeList"] as List<Dictionary<string, object>>;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>قائمة الموظفين</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    @if (ViewData["message"] != null)
    {
        <div>@ViewData["message"]</div>
    }
    <div class="container mx-auto p-4">
        <div class="flex justify-between mb-4">
            <h2 class="text-lg font-bold">قائمة الموظفين</h2>
            <a asp-action="CreateEmployee" class="bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 text-white font-bold py-2 px-4">إضافة موظف</a>
        </div>
        <table class="w-full table-auto">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-right">الاسم</th>
                    <th class="px-4 py-2 text-right">اسم المستخدم</th>
                    <th class="px-4 py-2 text-right">المنصب</th>
                    <th class="px-4 py-2 text-right">صلاحيات المنصب</th>
                    <th class="px-4 py-2 text-right">القسم</th>
                </tr>
            </thead>
            <tbody>
                @if (employeeList != null)
                {
                    foreach (var item in employeeList)
                    {
                        <tr>
                            <td class="px-4 py-2 text-right">@item["name"]</td>
                            <td class="px-4 py-2 text-right">@item["username"]</td>
                            <td class="px-4 py-2 text-right">@item["position"]</td>
                            <td class="px-4 py-2 text-right">@item["permission_position"]</td>
                            <td class="py-2 px-4 border-b">@item["departement_name"]</td>
                            <td class="px-4 py-2 text-right">
                                <a asp-action="UpdateEmployee" asp-route-id="@item["employee_id"]" class="text-blue-500 hover:text-blue-700">عرض و تعديل</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>