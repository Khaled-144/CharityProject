@model CharityProject.Models.Letter

@{
    ViewData["Title"] = "PartialDetails2";
}
<div class="modal fade" id="detailModal-@Model.letters_id" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header flex justify-content-center">
                <h4>معلومات المعاملة  #@Model.letters_id</h4>
            </div>
            <div class="modal-body align-content-center">
                <div class="col-md text-right my-1" dir="rtl">
                    <div>
                        <dl class="row text-center">
                            <dt class="col-sm-4">
                                الموضوع
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.title)
                            </dd>

                            <dt class="col-sm-4">
                                الوصف
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.description)
                            </dd>

                            <dt class="col-sm-5">
                                تاريخ الانشاء
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.date)
                            </dd>
                            <dt class="col-sm-4">
                                المرفقات
                            </dt>
                            <dd class="col-sm-18">
                                @Html.DisplayFor(model => model.files)
                            </dd>
                        </dl>
                    </div>
                    <div class="flex justify-center">
                        <button data-dismiss="modal" type="button" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-blue-300 transition duration-300 ease-in-out  font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">إخفاء</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





