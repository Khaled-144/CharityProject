@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>نسيت كلمة السر</title>
</head>

<body class="bg-cover bg-center bg-no-repeat bg-fixed" style="background-image: url('../images/alharm22.jpg');">
    <div class="flex justify-center items-center min-h-screen">
        <div class="w-[80vw] md:w-[400px] bg-white mx-auto shadow-2xl border rounded-md">
            <div class="p-8">
                <h1 class="text-2xl font-bold mb-4 text-center">نسيت كلمة السر</h1>

                <form asp-action="ResetPassword">
                    <div class="mb-4">
                        <label for="userid" class="block mb-2 text-base font-medium text-gray-900">الرقم الوظيفي</label>
                        <input type="text" id="userid" name="userid" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5" required>
                    </div>

                    <div class="mb-4">
                        <label for="newPassword" class="block mb-2 text-base font-medium text-gray-900">كلمة المرور الجديدة</label>
                        <input type="password" id="newPassword" name="newPassword" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5" required>
                    </div>

                    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 w-full rounded-md transition duration-200" type="submit">
                        إعادة تعيين كلمة السر
                    </button>
                </form>

               
            </div>
        </div>
    </div>
</body>

</html>

