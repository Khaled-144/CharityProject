@model IEnumerable<CharityProject.Models.employee_details>

@{
    // Determine layout based on user permission position
    var permissionPosition = Context.Session.GetString("Permission_position");

    if (permissionPosition == "مدير الموارد البشرية والمالية")
    {
        Layout = "_Layout_HR";
    }
    else if (permissionPosition == "مدير خدمة المستفيدين" || permissionPosition == "مدير التنمية المالية والاستدامة")
    {
        Layout = "_Layout_Managers";
    }
    else if (permissionPosition == "موظف")
    {
        Layout = "_Layout_Employees";
    }
    else
    {
        Layout = "_Layout";
    }

    // Set page title
    ViewData["PageTitle"] = "تسجيل الدخول";
    ViewData["Title"] = "صفحة تسجيل الدخول";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.css" rel="stylesheet" />
    <title>الاسكان التنموي - تسجيل دخول</title>
</head>

<body>
    <div class="flex items-center justify-center">
        <div class="w-[80vw] md:w-[400px] bg-white shadow-2xl border border-primaryColor rounded-md mt-24">
            <div class="p-6 pt-2">
                <h1 class="text-2xl justify-center font-bold mt-4 text-veryDarkBlue"> تسجيل الدخول </h1>
                <form asp-action="LoginPage">
                    <div class="mt-2 mb-2 flex flex-col">
                        @{
                            // Display error message if login fails
                            var message = (string)ViewData["Message"];
                            if (message == "Wrong username or password")
                            {
                                message = "الرقم الوظيفي أو كلمة المرور غير صحيحة";
                            }
                        }
                        <p class="mb-2 text-red-500">
                            @message
                        </p>

                        <label for="userid" class="block mb-2 text-base font-medium text-gray-900 dark:text-white">الرقم الوظيفي</label>
                        <div class="relative mb-6">
                            <div class="flex flex-row justify-center gap-3">
                                <img width="40px" src="/images/icon1.png" alt="cart icon" />
                                <input type="text" id="userid" name="userid" 
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                           focus:ring-blue-500 focus:border-blue-500 block w-full
                                           dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400
                                           dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                    placeholder="مثل: 10001" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-2 flex flex-col">
                        <label for="pass" class="block mb-2 text-base font-medium text-gray-900 dark:text-white">الرمز السري</label>
                        <div class="flex flex-row justify-center gap-3 ">
                            <img width="40px" src="/images/icon2.png" alt="password icon" />
                            <input type="password" id="pass" name="pass" 
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                       focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                       dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400
                                       dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="•••••••" required />
                        </div>
                    </div>

                    <button class="mt-6 bg-green-400 hover:bg-emerald-800 text-white font-bold py-2 px-4 w-full rounded-md transition duration-200" type="submit">
                        تسجيل الدخول
                    </button>
                </form>

                <div class="mt-2 pt-2 flex justify-between items-center gap-4">
                    <a href="/Home/ForgotPassword"
                       class="text-primaryColor underline underline-offset-4 hover:text-primaryButtons transition duration-200">
                        نسيت كلمة السر
                    </a>
                    <button class="bg-primaryButtons text-white px-2 py-2 text-sm rounded hover:bg-opacity-90 transition duration-200">
                        نظام البحث الاجتماعي
                    </button>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"></script>

    <!-- Restrict الرقم الوظيفي input to numbers -->
    <script>
        document.getElementById('userid').addEventListener('input', function (e) {
            this.value = this.value.replace(/\D/g, '');
        });
    </script>
</body>

<style>
    body {
        background-image: linear-gradient(to right bottom, rgba(0, 0, 0, 0.804), rgba(90, 90, 90, 0.84)), url(./images/alharm22.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 100vh;
    }
</style>
</html>
