@{
    ViewData["Title"] = "خطأ داخلي";
    var userRole = Context.Session.GetString("Permission_position"); // Assuming the user role is stored in session
}

<div class="w-full min-h-screen flex flex-col items-center justify-center text-center" dir="rtl">
    <div class="text-4xl sm:text-5xl md:text-6xl text-red-600 font-bold mb-4 animate__animated animate__shakeX">
        خطأ داخلي - 500
    </div>
    <p class="text-xl sm:text-2xl md:text-3xl text-gray-700 mb-6 animate__animated animate__fadeIn animate__delay-1s">
        حدث خطأ غير متوقع في النظام، يرجى المحاولة لاحقاً.
    </p>
    <button class="bg-red-600 rounded text-white px-3 py-2 text-md sm:text-lg md:text-xl font-semibold transition-all duration-300 ease-in-out hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-red-500"
            id="goHome">
        العودة إلى الصفحة الرئيسية
    </button>
</div>

<style>
    body {
        overflow: hidden; /* Prevent any scrollbars from appearing */
    }
</style>

<script>
document.getElementById("goHome").addEventListener("click", function () {
    var userRole = "@Html.Raw(userRole)";  // Use Html.Raw to output the raw value of userRole as a string

    // Role-based redirection
    if (!userRole) {
        window.location.href = '@Url.Action("LoginPage", "Home")';
    } else if (userRole === "موظف" || userRole === "السكرتير") {
        window.location.href = '@Url.Action("Index", "Employees")';
    } else if (userRole === "مدير الموارد البشرية والمالية") {
        window.location.href = '@Url.Action("Index", "HR")';
    } else if (userRole === "مدير التنمية المالية والاستدامة") {
        window.location.href = '@Url.Action("Index", "FinancialSustainabilityDevelopmentManager")';
    } else if (userRole === "مدير خدمة المستفيدين") {
        window.location.href = '@Url.Action("Index", "customerServiceManager")';
    } else if (userRole === "المدير التنفيذي") {
        window.location.href = '@Url.Action("Index", "CEO")';
    }
});
</script>
