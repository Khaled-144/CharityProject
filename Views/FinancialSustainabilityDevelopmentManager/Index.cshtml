@{
    Layout = "_Layout_Managers";
    ViewData["PageTitle"] = "الرئيسية";
    ViewData["Title"] = "الصفحة الرئيسية";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .stat-card {
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .active-page {
            position: relative;
        }

            .active-page::after {
                content: '';
                position: absolute;
                bottom: -4px;
                left: 0;
                width: 100%;
                height: 4px;
                background-color: #fff;
                border-radius: 2px;
            }

    </style>
</head>
<body class="bg-gray-100 font-sans">
    <nav class="bg-tealBlue text-white p-4 shadow-md">
        <div class="container mx-auto">
            <div class="flex justify-between items-center">
                <!-- User info -->
                <div class="flex items-center space-x-4">
                    <svg class="w-12 h-12 mx-2 rounded-full border-2 border-tealBlue-light p-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" /></svg>
                    <span class="font-semibold text-lg">
                        @Context.Session.GetString("Name")
                    </span>
                </div>
                <!-- Main navigation -->
                <div class="flex items-center">
                    <a asp-controller="FinancialSustainabilityDevelopmentManager" asp-action="Index" class="flex items-center px-4 py-2 text-white rounded-lg hover:bg-tealBlue-dark transition duration-300 ease-in-out group relative active-page">
                        <svg class="w-5 h-5 text-white transition duration-300 group-hover:text-tealBlue-light ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                            <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z" />
                            <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z" />
                        </svg>
                        <div>الرئيسية</div>
                    </a>
                    <a asp-controller="FinancialSustainabilityDevelopmentManager" asp-action="Transactions" class="flex items-center px-4 py-2 text-white rounded-lg hover:bg-tealBlue-dark transition duration-300 ease-in-out group relative">
                        <svg class="flex-shrink-0 w-5 h-5 text-white transition duration-300 group-hover:text-tealBlue-light ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M6.912 3a3 3 0 0 0-2.868 2.118l-2.411 7.838a3 3 0 0 0-.133.882V18a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3v-4.162c0-.299-.045-.596-.133-.882l-2.412-7.838A3 3 0 0 0 17.088 3H6.912Zm13.823 9.75-2.213-7.191A1.5 1.5 0 0 0 17.088 4.5H6.912a1.5 1.5 0 0 0-1.434 1.059L3.265 12.75H6.11a3 3 0 0 1 2.684 1.658l.256.513a1.5 1.5 0 0 0 1.342.829h3.218a1.5 1.5 0 0 0 1.342-.83l.256-.512a3 3 0 0 1 2.684-1.658h2.844Z" clip-rule="evenodd" />
                        </svg>
                        <div>المعاملات</div>
                    </a>
                    <a asp-controller="employees" asp-action="archive" class="flex items-center px-4 py-2 text-white rounded-lg hover:bg-tealBlue-dark transition duration-300 ease-in-out group relative">
                        <svg class="flex-shrink-0 w-5 h-5 text-white transition duration-300 group-hover:text-tealBlue-light ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                            <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.5 10.5L21 3m-5 0h5v5m0 6v5a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5" />
                        </svg>
                        <span>الارشيف</span>
                    </a>
                    <a asp-controller="OtherServices" asp-action="Index" class="flex items-center px-4 py-2 text-white rounded-lg hover:bg-tealBlue-dark transition duration-300 ease-in-out group">
                        <svg class="flex-shrink-0 w-5 h-5 text-white transition duration-300 group-hover:text-tealBlue-light ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19.5 21a3 3 0 0 0 3-3v-4.5a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3V18a3 3 0 0 0 3 3h15ZM1.5 10.146V6a3 3 0 0 1 3-3h5.379a2.25 2.25 0 0 1 1.59.659l2.122 2.121c.14.141.331.22.53.22H19.5a3 3 0 0 1 3 3v1.146A4.483 4.483 0 0 0 19.5 9h-15a4.483 4.483 0 0 0-3 1.146Z" />
                        </svg>
                        <span>خدمات أخرى</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Page Indicator -->
    <!-- Main content area -->
    <main class="container mx-auto py-8">
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <h1 class="text-3xl font-bold mb-4 text-black">
                مرحباً، @Context.Session.GetString("Name")
            </h1>
            <p class="text-xl mb-6 text-black">هذه نظرة عامة على نشاطك الأخير</p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="stat-card bg-gradient-to-tr from-blue-200 to-blue-600 p-4 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold mb-2 text-white">معاملات جديدة</h3>
                    <p class="text-3xl font-bold text-white" id="newTransactions">@ViewBag.NewTransactionsCount</p>
                </div>
                <div class="stat-card bg-gradient-to-tr from-yellow-200 to-yellow-600 p-4 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold mb-2 text-white">معاملات قيد الإنجاز</h3>
                    <p class="text-3xl font-bold text-white" id="inProgressTransactions">@ViewBag.OngoingTransactionsCount</p>
                </div>
                <div class="stat-card bg-gradient-to-tr from-green-200 to-green-600 p-4 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold mb-2 text-white">معاملات مكتملة</h3>
                    <p class="text-3xl font-bold text-white" id="completedTransactions">@ViewBag.CompletedTransactionsCount</p>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Display transaction counts
        document.getElementById("newTransactions").textContent = @ViewBag.NewTransactionsCount;
        document.getElementById("inProgressTransactions").textContent = @ViewBag.OngoingTransactionsCount;
        document.getElementById("completedTransactions").textContent = @ViewBag.CompletedTransactionsCount;
    </script>
</body>
</html>