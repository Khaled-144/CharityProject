@model IEnumerable<CharityProject.Models.Devices>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="d-flex justify-content-between mb-4 align-items-center">
        <button type="button" class="bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2 text-white font-bold transition duration-300 ease-in-out" data-toggle="modal" data-target="#CreateDeviceModal">
            إضافة جهاز جديد
        </button>
        @await Html.PartialAsync("_CreateDevice", new Devices())

        <div class="flex-grow-1 d-flex justify-content-start" style="max-width: 300px;">
            <div class="d-flex align-items-center border-2 rounded border-primaryButtons bg-white w-100">
                <input id="searchInput" placeholder="رقم الجهاز أو اسمه" class="flex-grow-1 py-2 px-4 w-75" style="min-width: 0;" />
                <button id="searchButton" class="flex items-center justify-center px-4 py-3 text-white rounded-r bg-primaryButtons">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 518 518">
                        <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-right">اسم الجهاز</th>
                <th class="text-center">الكمية</th>
                <th class="text-left">العمليات</th>
            </tr>
        </thead>
        <tbody id="deviceTableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@Html.DisplayFor(modelItem => item.name)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.quantity)</td>
                    <td class="text-left">
                        <button type="button" class="btn btn-warning mr-2" data-toggle="modal" data-target="@("#EditDeviceModal-" + @item.devices_id)">تعديل</button>
                        <button type="button" class="btn btn-info mr-2" data-toggle="modal" data-target="@("#DetailsDeviceModal-" + @item.devices_id)">تفاصيل</button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="@("#DeleteDeviceModal-" + @item.devices_id)">حذف</button>
                    </td>
                </tr>
                @await Html.PartialAsync("_EditDevice", item)
                @await Html.PartialAsync("_DetailsDevice", item)
                @await Html.PartialAsync("_DeleteDevice", item)
            }
        </tbody>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const searchButton = document.getElementById('searchButton');
            const deviceTableBody = document.getElementById('deviceTableBody');

            function performSearch() {
                const searchTerm = searchInput.value.toLowerCase();
                const rows = deviceTableBody.getElementsByTagName('tr');

                for (let i = 0; i < rows.length; i++) {
                    const deviceName = rows[i].getElementsByTagName('td')[0].textContent.toLowerCase();
                    if (deviceName.includes(searchTerm)) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }

            searchButton.addEventListener('click', performSearch);
            searchInput.addEventListener('keyup', function (event) {
                if (event.key === 'Enter') {
                    performSearch();
                }
            });
        });
    </script>
</body>
</html>