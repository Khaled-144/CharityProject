@model CharityProject.Models.Devices

<div class="modal fade" id="CreateDeviceModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">إضافة أصل جديد</h5>
                <button type="button" style="font-size: 2rem;" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-right">
                <form asp-action="CreateDevice">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="name" class="control-label">اسم الأصل </label>
                        <input asp-for="name" class="form-control" placeholder="أدخل اسم الأصل " />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="quantity" class="control-label">الكمية</label>
                        <input asp-for="quantity" class="form-control" placeholder="أدخل الكمية" />
                        <span asp-validation-for="quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" value="إنشاء" class="btn btn-primary" />
                        <button type="button" class="btn btn-dark" data-dismiss="modal">إلغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>