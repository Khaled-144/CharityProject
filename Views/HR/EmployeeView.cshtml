@{
    if (Context.Session.GetString("Permission_position") == "مدير الموارد البشرية والمالية")
    {
        Layout = "_Layout_HR";

    }
    else if (Context.Session.GetString("Permission_position") == "مدير خدمة المستفيدين" || Context.Session.GetString("Permission_position") == "مدير التنمية المالية والاستدامة")
    {
        Layout = "_Layout_Managers";
    }
    else if (Context.Session.GetString("Permission_position") == "موظف")
    {
        Layout = "_Layout_Employees";
    }
    else
    {
        Layout = "_Layout";
    }

    ViewData["PageTitle"] = "قائمة الموظفين";
    ViewData["Title"] = "صفحة قائمة الموظفين";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>قائمة الموظفين</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        .shadow-text {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-emerald-100 via-teal-200 to-cyan-300 min-h-screen p-8 font-sans">
    <div class="max-w-8xl mx-auto">
        <h2 class="p-4 text-5xl font-bold mb-12 text-center text-black shadow-text fade-in">قائمة الموظفين </h2>

        @{
            var departments = (List<Department>)ViewData["Departments"];
        }

        <div class="glass-effect p-8 mb-10 fade-in shadow-lg">
            <form id="searchForm" onsubmit="return false;" class="mb-6">
                <div class="flex flex-col md:flex-row justify-between space-y-4 md:space-y-0 md:space-x-reverse md:space-x-4">
                    <a asp-action="CreateEmployee" class="w-full md:w-auto bg-primaryButtons text-white font-bold rounded-lg px-6 py-3 hover:emerald-600 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-opacity-50 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg order-1 md:order-3">
                        إضافة موظف
                    </a>
                    <select id="departmentFilter" class="w-full md:w-1/4 px-4 py-3 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-gray-500 transition duration-300 order-3 md:order-2 bg-white" onchange="filterEmployees()">
                        <option value="all" selected>كل الأقسام</option>
                        @foreach (var department in departments)
                        {
                            <option value="@department.departement_name">@department.departement_name</option>
                        }
                    </select>
                    <input id="employeeSearch" name="name" placeholder="بحث عن اسم الموظف" class="w-full md:w-1/2 px-4 py-3 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-gray-500 transition duration-300 order-2 md:order-1" type="search" aria-label="search" onkeyup="filterEmployees()" />
                </div>
            </form>
        </div>

        @if (ViewData["EmployeeList"] != null)
        {
            <div class="overflow-x-auto fade-in">
                <table id="employeeTable" class="w-full bg-white rounded-lg shadow-xl overflow-hidden">
                    <thead>
                        <tr class="bg-primaryButtons text-white">
                            <th class="py-4 px-6 text-right">الرقم الوظيفي</th>
                            <th class="py-4 px-6 text-right">الاسم</th>
                            <th class="py-4 px-6 text-right">اسم المستخدم</th>
                            <th class="py-4 px-6 text-right">المنصب</th>
                            <th class="py-4 px-6 text-right">الصلاحيات</th>
                            <th class="py-4 px-6 text-right">اسم القسم</th>
                            <th class="py-4 px-6 text-right">نوع العقد</th>
                            <th class="py-4 px-6 text-right">الاجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in (IEnumerable<dynamic>)ViewData["EmployeeList"])
                        {
                            <tr class="employeeRow hover:bg-emerald-50 transition duration-300 ease-in-out" data-name="@employee.name" data-department="@employee.DepartmentName">
                                <td class="py-4 px-6 border-b">@employee.employee_id</td>
                                <td class="py-4 px-6 border-b">@employee.name</td>
                                <td class="py-4 px-6 border-b">@employee.username</td>
                                <td class="py-4 px-6 border-b">@employee.Position</td>
                                <td class="py-4 px-6 border-b">@employee.PermissionPosition</td>
                                <td class="py-4 px-6 border-b">@employee.DepartmentName</td>
                                <td class="py-4 px-6 border-b">
                                    @employee.contract_type
                                </td>
                                <td class="py-4 px-6 border-b">
                                    <form asp-controller="HR" asp-action="UpdateEmployee" method="get">
                                        <input type="hidden" name="id" value="@employee.employee_id" />
                                        <button class="bg-primaryButtons text-white py-2 px-4 rounded-lg hover:from-emerald-600 hover:to-teal-700 transition duration-300 ease-in-out transform hover:scale-105">
                                            التفاصيل
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-gray-700 text-center mt-4 text-xl fade-in bg-white p-8 rounded-lg shadow-lg">لا توجد بيانات لعرضها.</p>
        }
    </div>

    <script>
        function filterEmployees() {
            var input = document.getElementById('employeeSearch').value.toLowerCase();
            var filter = document.getElementById('departmentFilter').value;
            var table = document.getElementById('employeeTable');
            var rows = table.getElementsByClassName('employeeRow');

            for (var i = 0; i < rows.length; i++) {
                var name = rows[i].getAttribute('data-name').toLowerCase();
                var department = rows[i].getAttribute('data-department');

                if ((name.includes(input) || input === '') && (filter === 'all' || department === filter)) {
                    rows[i].style.display = '';
                    rows[i].classList.add('fade-in');
                } else {
                    rows[i].style.display = 'none';
                    rows[i].classList.remove('fade-in');
                }
            }
        }
    </script>
</body>
</html>