@model IEnumerable<CharityProject.Models.salaries_history>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <div class="flex flex-column sm:flex-row flex-wrap space-y-4 sm:space-y-0 items-center justify-between pb-4">
        <!-- Other controls like buttons, filters, search, etc. -->
    </div>
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Employee ID</th>
                <th scope="col" class="px-6 py-3">Base Salary</th>
                <th scope="col" class="px-6 py-3">Housing Allowances</th>
                <th scope="col" class="px-6 py-3">Transportation Allowances</th>
                <th scope="col" class="px-6 py-3">Other Allowances</th>
                <th scope="col" class="px-6 py-3">Overtime</th>
                <th scope="col" class="px-6 py-3">Bonus</th>
                <th scope="col" class="px-6 py-3">Date</th>
                <th scope="col" class="px-6 py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salary in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4">@salary.emp_id</td>
                    <td class="px-6 py-4">@salary.base_salary</td>
                    <td class="px-6 py-4">@salary.housing_allowances</td>
                    <td class="px-6 py-4">@salary.transportaion_allowances</td>
                    <td class="px-6 py-4">@salary.other_allowances</td>
                    <td class="px-6 py-4">@salary.overtime</td>
                    <td class="px-6 py-4">@salary.bonus</td>
                    <td class="px-6 py-4">@salary.date.ToString("yyyy-MM-dd")</td>
                    <td class="px-6 py-4">
                        <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
