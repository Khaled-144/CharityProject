@model CharityProject.Models.salaries_history

@{
    ViewBag.Title = "Edit Salary";
}

<h2>Edit Salary for Employee @Model.emp_id</h2>

@using (Html.BeginForm("UpdateSalary", "HR", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.salaries_history_id)
    @Html.HiddenFor(model => model.emp_id)

    <div class="form-group">
        @Html.LabelFor(model => model.base_salary, "Base Salary")
        @Html.EditorFor(model => model.base_salary, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.housing_allowances, "Housing Allowances")
        @Html.EditorFor(model => model.housing_allowances, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.transportaion_allowances, "Transportation Allowances")
        @Html.EditorFor(model => model.transportaion_allowances, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.other_allowances, "Other Allowances")
        @Html.EditorFor(model => model.other_allowances, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.overtime, "Overtime")
        @Html.EditorFor(model => model.overtime, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bonus, "Bonus")
        @Html.EditorFor(model => model.bonus, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.delay_discount, "Delay Discount")
        @Html.EditorFor(model => model.delay_discount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.absence_discount, "Absence Discount")
        @Html.EditorFor(model => model.absence_discount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.other_discount, "Other Discount")
        @Html.EditorFor(model => model.other_discount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.debt, "Debt")
        @Html.EditorFor(model => model.debt, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.shared_portion, "Shared Portion")
        @Html.EditorFor(model => model.shared_portion, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.facility_portion, "Facility Portion")
        @Html.EditorFor(model => model.facility_portion, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.work_days, "Work Days")
        @Html.EditorFor(model => model.work_days, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.date, "Date")
        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.exchange_statement, "Exchange Statement")
        @Html.TextAreaFor(model => model.exchange_statement, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.notes, "Notes")
        @Html.TextAreaFor(model => model.notes, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Update Salary" class="btn btn-primary" />
        <a href="@Url.Action("ManageSalaries", "HR", new { month = Model.date.ToString("MMMM") })" class="btn btn-secondary">Cancel</a>
    </div>
}
