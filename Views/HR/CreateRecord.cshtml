@model CharityProject.Models.salaries_history

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إضافة سجل راتب جديد</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-right">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">إضافة سجل راتب جديد</h1>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <form asp-action="CreateRecord" method="post">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Employee Selector -->
                    <div class="mb-4">
                        <label for="emp_id" class="block mb-2 text-sm font-medium text-gray-900">اسم الموظف</label>
                        <select id="emp_id" name="emp_id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                            <option value="">اختار موظف</option>
                            @foreach (var employee in ViewBag.Employees as IEnumerable<SelectListItem>)
                            {
                                <option value="@employee.Value">@employee.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Base Salary -->
                    <div class="mb-4">
                        <label for="base_salary" class="block mb-2 text-sm font-medium text-gray-900">الراتب الأساسي</label>
                        <input id="base_salary" name="base_salary" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required />
                    </div>

                    <!-- Housing Allowances -->
                    <div class="mb-4">
                        <label for="housing_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدل السكن</label>
                        <input id="housing_allowances" name="housing_allowances" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Transportation Allowances -->
                    <div class="mb-4">
                        <label for="transportaion_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدل النقل</label>
                        <input id="transportaion_allowances" name="transportaion_allowances" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Other Allowances -->
                    <div class="mb-4">
                        <label for="other_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدلات أخرى</label>
                        <input id="other_allowances" name="other_allowances" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Overtime -->
                    <div class="mb-4">
                        <label for="overtime" class="block mb-2 text-sm font-medium text-gray-900">العمل الإضافي</label>
                        <input id="overtime" name="overtime" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Bonus -->
                    <div class="mb-4">
                        <label for="bonus" class="block mb-2 text-sm font-medium text-gray-900">المكافأة</label>
                        <input id="bonus" name="bonus" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Delay Discount -->
                    <div class="mb-4">
                        <label for="delay_discount" class="block mb-2 text-sm font-medium text-gray-900">خصم التأخير</label>
                        <input id="delay_discount" name="delay_discount" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Absence Discount -->
                    <div class="mb-4">
                        <label for="absence_discount" class="block mb-2 text-sm font-medium text-gray-900">خصم الغياب</label>
                        <input id="absence_discount" name="absence_discount" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Other Discounts -->
                    <div class="mb-4">
                        <label for="other_discount" class="block mb-2 text-sm font-medium text-gray-900">خصومات أخرى</label>
                        <input id="other_discount" name="other_discount" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Debt -->
                    <div class="mb-4">
                        <label for="debt" class="block mb-2 text-sm font-medium text-gray-900">الدين</label>
                        <input id="debt" name="debt" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Shared Portion -->
                    <div class="mb-4">
                        <label for="shared_portion" class="block mb-2 text-sm font-medium text-gray-900">حصة المشترك</label>
                        <input id="shared_portion" name="shared_portion" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Facility Portion -->
                    <div class="mb-4">
                        <label for="facility_portion" class="block mb-2 text-sm font-medium text-gray-900">حصة المنشأة</label>
                        <input id="facility_portion" name="facility_portion" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Work Days -->
                    <div class="mb-4">
                        <label for="work_days" class="block mb-2 text-sm font-medium text-gray-900">أيام العمل</label>
                        <input id="work_days" name="work_days" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Date -->
                    <div class="mb-4">
                        <label for="date" class="block mb-2 text-sm font-medium text-gray-900">التاريخ</label>
                        <input id="date" name="date" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Exchange Statement -->
                    <div class="mb-4">
                        <label for="exchange_statement" class="block mb-2 text-sm font-medium text-gray-900">بيان الصرف</label>
                        <input id="exchange_statement" name="exchange_statement" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    </div>

                    <!-- Notes -->
                    <div class="mb-4 md:col-span-2">
                        <label for="notes" class="block mb-2 text-sm font-medium text-gray-900">ملاحظات</label>
                        <textarea id="notes" name="notes" rows="3" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"></textarea>
                    </div>
                </div>

                <div class="flex ">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">إضافة</button>
                    <a asp-action="Index" asp-controller="salaries_history" class="ml-4 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 mr-5 rounded focus:outline-none focus:shadow-outline">إلغاء</a>

                </div>
            </form>
        </div>
    </div>
</body>
</html>
