<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تحديث بيانات الموظف</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">تحديث بيانات الموظف</h1>
        <p style="color:green">@ViewData["message"]</p>
        <form asp-action="UpdateEmployee" method="post" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" id="employeeForm">
            @{
                var employeeData = (Dictionary<string, object>)ViewData["EmployeeData"];
                var departments = (List<Department>)ViewData["Departments"];
                
            }
            
            <input type="hidden" id="employee_id" name="employee_id" value="@employeeData["employee_id"]" />

            <div class="mb-6">
                <h2 class="text-xl font-semibold mb-4">معلومات الموظف الأساسية</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="employee_name" class="block text-gray-700 text-sm font-bold mb-2">الاسم</label>
                        <input id="employee_name" name="employee_name" value="@employeeData["employee_name"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_username" class="block text-gray-700 text-sm font-bold mb-2">اسم المستخدم</label>
                        <input id="employee_username" name="employee_username" value="@employeeData["employee_username"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_password" class="block text-gray-700 text-sm font-bold mb-2">كلمة المرور</label>
                        <input id="employee_password" name="employee_password" type="password" value="@employeeData["employee_password"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_search_role" class="block text-gray-700 text-sm font-bold mb-2">دور البحث</label>
                        <input id="employee_search_role" name="employee_search_role" value="@employeeData["employee_search_role"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <h2 class="text-xl font-semibold mb-4">تفاصيل الموظف</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div>
                        <label for="employee_identity_number" class="block text-gray-700 text-sm font-bold mb-2">رقم الهوية</label>
                        <input id="employee_identity_number" name="employee_identity_number" type="number" value="@employeeData["employee_identity_number"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <input type="hidden" id="employee_departement_id_hidden" value="@employeeData["employee_departement_id"]" />
                        <label for="employee_departement_id" class="block text-gray-700 text-sm font-bold mb-2">القسم</label>
                        <select id="employee_departement_id" name="employee_departement_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                            <option value="">اختر القسم</option>
                            @foreach (var department in departments)
                            {
                                <option value="@department.departement_id">@department.departement_name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label for="employee_position" class="block text-gray-700 text-sm font-bold mb-2">المنصب</label>
                        <input id="employee_position" name="employee_position" value="@employeeData["employee_position"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_permission_position" class="block text-gray-700 text-sm font-bold mb-2">الصلاحيات</label>
                        <input id="employee_permission_position" name="employee_permission_position" value="@employeeData["employee_permission_position"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_contract_type" class="block text-gray-700 text-sm font-bold mb-2">نوع العقد</label>
                        <input id="employee_contract_type" name="employee_contract_type" value="@employeeData["employee_contract_type"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_national_address" class="block text-gray-700 text-sm font-bold mb-2">العنوان الوطني</label>
                        <input id="employee_national_address" name="employee_national_address" value="@employeeData["employee_national_address"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_education_level" class="block text-gray-700 text-sm font-bold mb-2">المستوى التعليمي</label>
                        <input id="employee_education_level" name="employee_education_level" value="@employeeData["employee_education_level"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_hire_date" class="block text-gray-700 text-sm font-bold mb-2">تاريخ التوظيف</label>
                        <input id="employee_hire_date" name="employee_hire_date" type="date" value="@(((DateTime)employeeData["employee_hire_date"]).ToString("yyyy-MM-dd"))" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_leave_date" class="block text-gray-700 text-sm font-bold mb-2">تاريخ انتهاء العقد</label>
                        <input id="employee_leave_date" name="employee_leave_date" type="date" value="@(((DateTime)employeeData["employee_leave_date"]).ToString("yyyy-MM-dd"))" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_email" class="block text-gray-700 text-sm font-bold mb-2">البريد الإلكتروني</label>
                        <input id="employee_email" name="employee_email" type="email" value="@employeeData["employee_email"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div>
                        <label for="employee_phone_number" class="block text-gray-700 text-sm font-bold mb-2">رقم الهاتف</label>
                        <input id="employee_phone_number" name="employee_phone_number" type="number" value="@employeeData["employee_phone_number"]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <input type="hidden" id="employee_gender_hidden" value="@employeeData["employee_gender"]" />
                    <div class="mb-4">
                        <label for="employee_gender" class="block text-gray-700 text-sm font-bold mb-2">الجنس</label>
                        <select id="employee_gender" name="employee_gender" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                            <option value="">اختر الجنس</option>
                            <option value="Male">ذكر</option>
                            <option value="Female">أنثى</option>
                        </select>
                    </div>


                </div>
            </div>

            <div class="mb-6">
                <label for="employee_files" class="block text-gray-700 text-sm font-bold mb-2">الملفات</label>
                <input id="employee_files" name="employee_files" type="file" multiple class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="employee_active" name="employee_active" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" value="true" checked="@((bool)employeeData["employee_active"])" />
                    <label for="employee_active" class="mr-2 block text-gray-700 text-sm font-bold">نشط</label>
                </div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    تحديث بيانات الموظف
                </button>
            </div>
        </form>

        <div>
            <a asp-action="EmployeeView" class="text-blue-500 hover:text-blue-700">العودة إلى القائمة</a>
        </div>
    </div>
    <script>
        $(document).on('submit', '#employeeForm', function (e) {
            e.preventDefault();
            $.ajax({
                url: '@Url.Action("UpdateEmployee", "Employee")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'نجاح',
                            html: '<div class="text-4xl">&#10003;</div><div>تم تحديث الموظف بنجاح</div>',
                            showConfirmButton: false,
                            timer: 3000
                        });
                        $('#employeeForm')[0].reset();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطأ!',
                            text: response.message,
                            confirmButtonText: 'حسناً'
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'خطأ!',
                        text: 'حدث خطأ في الاتصال بالخادم.',
                        confirmButtonText: 'حسناً'
                    });
                }
            });
        });


        document.addEventListener('DOMContentLoaded', function () {
            var genderHidden = document.getElementById('employee_gender_hidden').value;
            var genderSelect = document.getElementById('employee_gender');
            var departmentHidden = document.getElementById('employee_departement_id_hidden').value;
            var departmentSelect = document.getElementById('employee_departement_id');

            if (genderHidden) {
                for (var i = 0; i < genderSelect.options.length; i++) {
                    if (genderSelect.options[i].value === genderHidden) {
                        genderSelect.selectedIndex = i;
                        break;
                    }
                }
            }

            if (departmentHidden) {
                for (var i = 0; i < departmentSelect.options.length; i++) {
                    if (departmentSelect.options[i].value === departmentHidden) {
                        departmentSelect.selectedIndex = i;
                        break;
                    }
                }
            }
        });
    </script>
</body>

</html>