@model IEnumerable<CharityProject.Models.Devices>
@{
    if (Context.Session.GetString("Permission_position") == "مدير الموارد البشرية والمالية")
    {
        Layout = "_Layout_HR";

    }
    else if (Context.Session.GetString("Permission_position") == "مدير خدمة المستفيدين" || Context.Session.GetString("Permission_position") == "مدير التنمية المالية والاستدامة")
    {
        Layout = "_Layout_Managers";
    }
    else if (Context.Session.GetString("Permission_position") == "موظف")
    {
        Layout = "_Layout_Employees";
    }
    else
    {
        Layout = "_Layout";
    }

    ViewData["PageTitle"] = "الأصول";
    ViewData["Title"] = "صفحة الأصول";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <!-- Center the table within a container with full width -->
    <div class="flex justify-center mt-4">
        <div class="w-full max-w-7xl">
            <div class="d-flex justify-content-between mt-5 mb-2 align-items-center">
                <button class="bg-primaryButtons hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2 text-white font-bold transition duration-300 ease-in-out" data-toggle="modal" data-target="#CreateDeviceModal">
                    إضافة أصل  جديد
                </button>
                @await Html.PartialAsync("_CreateDevice", new Devices())
                <div class="flex-grow-1 d-flex justify-content-start" style="max-width: 300px;">
                    <div class="flex justify-end mt-10">
                        <div class="flex items-center space-x-2">
                            <input id="searchInput" placeholder="  أدخل اسم الأصل  " class="form-control py-2 px-4 w-3/4 text-gray-700 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="search" aria-label="search" />
                            <button id="searchButton" class="btn btn-dark" type="button">بحث</button>

                        </div>
                    </div>

                </div>
            </div>
            <!-- max-w-7xl controls the max width of the table container -->
            <div class="overflow-x-auto">
                <table class="w-full bg-white rounded-lg shadow-md overflow-hidden">
                    <thead>
                        <tr class="bg-primaryButtons text-white">
                            <th class="py-4 px-6 text-right">اسم الأصل</th>
                            <th class="py-4 px-6 text-center">الكمية</th>
                            <th class="py-4 px-6 text-left">العمليات</th>
                        </tr>
                    </thead>
                    <tbody id="deviceTableBody">
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="hover:bg-gray-100 transition duration-200 ease-in-out">
                                    <td class="py-4 px-6 border-b text-right">@Html.DisplayFor(modelItem => item.name)</td>
                                    <td class="py-4 px-6 border-b text-center">@Html.DisplayFor(modelItem => item.quantity)</td>
                                    <td class="py-4 px-6 border-b text-left space-x-4">
                                        <button type="button" class="bg-gradient-to-r from-blue-500 to-blue-600 text-white py-2 px-4 rounded-lg hover:from-blue-600 hover:to-blue-700 transition duration-300 ease-in-out transform hover:scale-105 inline-block" data-toggle="modal" data-target="@("#EditDeviceModal-" + @item.devices_id)">تعديل</button>
                                        <button type="button" class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300 ease-in-out transform hover:scale-105 inline-block" data-toggle="modal" data-target="@("#DeleteDeviceModal-" + @item.devices_id)">حذف</button>
                                    </td>
                                </tr>
                                @await Html.PartialAsync("_EditDevice", item)
                                @await Html.PartialAsync("_DeleteDevice", item)
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="py-4 px-6 text-center text-gray-500">لاتوجد أصول</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const searchButton = document.getElementById('searchButton');
            const deviceTableBody = document.getElementById('deviceTableBody');

            function performSearch() {
                const searchTerm = searchInput.value.toLowerCase();
                const rows = deviceTableBody.getElementsByTagName('tr');

                for (let i = 0; i < rows.length; i++) {
                    const deviceName = rows[i].getElementsByTagName('td')[0].textContent.toLowerCase();
                    if (deviceName.includes(searchTerm)) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }

            searchButton.addEventListener('click', performSearch);
            searchInput.addEventListener('keyup', function (event) {
                if (event.key === 'Enter') {
                    performSearch();
                }
            });
        });
    </script>
</body>

</html>