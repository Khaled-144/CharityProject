@model CharityProject.Models.Devices

<div class="modal fade" id="DeleteDeviceModal-@Model.devices_id" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">حذف الأصل</h4>
                <button type="button" style="font-size: 2rem;" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-right">
                <h4>تفاصيل الأصل</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2 text-right">
                        الأصل
                    </dt>
                    <dd class="col-sm-10 text-right">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class="col-sm-2 text-right">
                        الكمية
                    </dt>
                    <dd class="col-sm-10 text-right">
                        @Html.DisplayFor(model => model.quantity)
                    </dd>
                </dl>
                <p>هل أنت متأكد أنك تريد حذف هذا الأصل؟</p>
            </div>
            <div class="modal-footer justify-content-start">
                <!-- Align buttons to the right -->
                <form asp-action="DeleteDevice" asp-route-id="@Model.devices_id">
                    <input type="hidden" asp-for="devices_id" />
                    <button type="submit" class="btn btn-danger">حذف</button>
                    <button type="button" class="btn btn-dark" data-dismiss="modal">إلغاء</button>
                </form>
            </div>
        </div>
    </div>
</div>