@model CharityProject.Models.charter

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8" dir="rtl">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>نموذج العهدة</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.2.7/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .custom-modal-size {
            max-width: 80%;
        }
    </style>
</head>
<body class="bg-gray-100">

    <div class="modal fade" id="insertChartersModal" role="dialog">
        <div class="modal-dialog custom-modal-size">
            <div class="modal-content bg-white shadow-lg rounded-lg">
                <div class="modal-header border-b p-4 flex justify-between items-center">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title w-full text-center">نموذج العهدة</h4>
                </div>
         
        
   
                <div class="modal-body p-6 text-right">
                    <form asp-action="Create_Charter" method="post" class="space-y-4">
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="flex-1">
                                <label asp-for="charter_info" class="block font-medium text-gray-700 mb-1">معلومات العهدة</label>
                                <input asp-for="charter_info" type="text" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            <div class="flex-1">
                                <label asp-for="serial_number" class="block font-medium text-gray-700 mb-1">الرقم التسلسلي</label>
                                <input asp-for="serial_number" type="text" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="flex-1">
                                <label asp-for="creation_date" class="block font-medium text-gray-700 mb-1">تاريخ الإنشاء</label>
                                <input asp-for="creation_date" type="date" id="creation_date" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            <div class="flex-1">
                                <label asp-for="notes" class="block font-medium text-gray-700 mb-1">ملاحظات</label>
                                <input asp-for="notes" type="text" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="flex-1">
                                <label asp-for="to_departement_name" class="block font-medium text-gray-700 mb-1">القسم</label>
                                <select id="departmentSelect" asp-for="to_departement_name" asp-items="@(ViewData["Departments"] as IEnumerable<SelectListItem>)" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">-- أختر القسم --</option>
                                </select>
                            </div>
                            <div class="flex-1">
                                <label asp-for="to_emp_id" class="block font-medium text-gray-700 mb-1">الموظف</label>
                                <select id="employeeSelect" asp-for="to_emp_id" asp-items="@(ViewData["Employees"] as IEnumerable<SelectListItem>)" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">-- اختر الموظف --</option>
                                </select>
                            </div>
                        </div>

                        <div class="flex justify-center mt-6">
                            <button type="submit" class="bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:outline-none focus:ring-2 focus:ring-green-500 text-white font-bold py-2 px-4 rounded-lg transition duration-300">إرسال</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let today = new Date();
            let dd = String(today.getDate()).padStart(2, '0');
            let mm = String(today.getMonth() + 1).padStart(2, '0');
            let yyyy = today.getFullYear();
            let formattedDate = yyyy + '-' + mm + '-' + dd;
            document.getElementById('creation_date').value = formattedDate;

            document.getElementById('departmentSelect').addEventListener('change', function () {
                let departmentId = this.value;
                let employeeSelect = document.getElementById('employeeSelect');

                if (departmentId) {
                    fetch('/HR/GetEmployeesByDepartment?departmentId=' + departmentId)
                        .then(response => response.json())
                        .then(data => {
                            employeeSelect.innerHTML = '<option value="">-- اختر الموظف --</option>'; // Reset employee options
                            data.forEach(employee => {
                                let option = document.createElement('option');
                                option.value = employee.employee_id; // Set the value to employee_id
                                option.textContent = employee.name + ' - ' + employee.position; // Set the text to name and position
                                employeeSelect.appendChild(option);
                            });
                        })
                        .catch(error => {
                            console.error('خطاء في استرجاع الموظفين:', error);
                        });
                } else {
                    employeeSelect.innerHTML = '<option value="">-- اختر الموظف --</option>';
                }
            });
        });
    </script>

</body>
</html>
