@model CharityProject.Models.salaries_history

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعديل سجل الرواتب</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-right">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">تعديل سجل الراتب للموظف: @ViewBag.EmployeeName</h1>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          

            <form asp-action="Edit_Salaries">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="mb-4">
                        <label asp-for="base_salary" class="block mb-2 text-sm font-medium text-gray-900">الراتب الأساسي</label>
                        <input asp-for="base_salary" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                    </div>

                    <div class="mb-4">
                        <label asp-for="housing_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدل السكن</label>
                        <input asp-for="housing_allowances" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="transportaion_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدل المواصلات</label>
                        <input asp-for="transportaion_allowances" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="other_allowances" class="block mb-2 text-sm font-medium text-gray-900">بدلات أخرى</label>
                        <input asp-for="other_allowances" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="overtime" class="block mb-2 text-sm font-medium text-gray-900">العمل الإضافي</label>
                        <input asp-for="overtime" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="bonus" class="block mb-2 text-sm font-medium text-gray-900">المكافآت</label>
                        <input asp-for="bonus" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="delay_discount" class="block mb-2 text-sm font-medium text-gray-900">خصم التأخير</label>
                        <input asp-for="delay_discount" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="absence_discount" class="block mb-2 text-sm font-medium text-gray-900">خصم الغياب</label>
                        <input asp-for="absence_discount" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="other_discount" class="block mb-2 text-sm font-medium text-gray-900">خصومات أخرى</label>
                        <input asp-for="other_discount" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="debt" class="block mb-2 text-sm font-medium text-gray-900">الديون</label>
                        <input asp-for="debt" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="shared_portion" class="block mb-2 text-sm font-medium text-gray-900">حصة المشترك</label>
                        <input asp-for="shared_portion" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="facility_portion" class="block mb-2 text-sm font-medium text-gray-900">حصة المنشأة</label>
                        <input asp-for="facility_portion" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                

                    <div class="mb-4">
                        <label asp-for="work_days" class="block mb-2 text-sm font-medium text-gray-900">أيام العمل</label>
                        <input asp-for="work_days" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="date" class="block mb-2 text-sm font-medium text-gray-900">التاريخ</label>
                        <input asp-for="date" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4">
                        <label asp-for="exchange_statement" class="block mb-2 text-sm font-medium text-gray-900">بيان الصرف</label>
                        <input asp-for="exchange_statement" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>

                    <div class="mb-4 md:col-span-2">
                        <label asp-for="notes" class="block mb-2 text-sm font-medium text-gray-900">ملاحظات</label>
                        <textarea asp-for="notes" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500"></textarea>
                    </div>
                </div>

                <div class="flex items-center justify-between mt-6">
                    
                    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">حفظ التغييرات</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

