<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الصفحة الشخصية</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function togglePasswordForm() {
            const formDiv = document.getElementById('passwordFormDiv');
            if (formDiv.style.display === "none" || formDiv.style.display === "") {
                formDiv.style.display = "block";
            } else {
                formDiv.style.display = "none";
            }
        }
    </script>
</head>
<body>

    <div class="bg-white overflow-hidden shadow rounded-lg border">
        <div class="px-4 py-5 sm:px-6 justify-center flex">
            <svg class="h-20 w-20 rounded-full bg-gray-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
            </svg>
        </div>

        <h3 class="text-lg leading-6 font-medium text-gray-900 text-center">
            الملف الشخصي
        </h3>

        <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
            <!-- Display Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">خطأ! </strong>
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
            }

            <!-- Display Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">نجاح! </strong>
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
            }

            <dl class="sm:divide-y sm:divide-gray-200">
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        الاسم
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Context.Session.GetString("Name")
                    </dd>
                </div>
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        القسم
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Context.Session.GetString("DepartmentName")
                    </dd>
                </div>
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        المنصب
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Context.Session.GetString("Position")
                    </dd>
                </div>
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        الرقم الوظيفي
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Context.Session.GetString("Id")
                    </dd>
                </div>
            </dl>
            <!-- Button to Show/Hide Password Form -->
            <div class="flex justify-center mt-6">
                <button onclick="togglePasswordForm()"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                    تعديل كلمة المرور
                </button>
            </div>
        </div>

        <!-- Password Form (Initially Hidden) -->
        <div id="passwordFormDiv" class="border-t border-gray-200 px-4 py-5 sm:p-0 mt-5" style="display: none;">
            <h3 class="text-lg leading-6 font-medium text-gray-900 text-center">
                تغيير كلمة المرور
            </h3>
            <form method="post" action="@Url.Action("ChangePassword", "_employeeProfile")" class="mt-6">
                <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <label for="current_password" class="block text-sm font-medium text-gray-500">
                        كلمة المرور الحالية
                    </label>
                    <input id="current_password" name="current_password" type="password" required
                           class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                </div>

                <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <label for="new_password" class="block text-sm font-medium text-gray-500">
                        كلمة المرور الجديدة
                    </label>
                    <input id="new_password" name="new_password" type="password" required
                           class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                </div>

                <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <label for="confirm_password" class="block text-sm font-medium text-gray-500">
                        تأكيد كلمة المرور الجديدة
                    </label>
                    <input id="confirm_password" name="confirm_password" type="password" required
                           class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                </div>

                <div class="flex justify-center mt-6">
                    <button type="submit"
                            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                        تحديث كلمة المرور
                    </button>
                </div>
            </form>

        </div>
    </div>

</body>
</html>


