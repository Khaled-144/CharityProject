@{
    ViewData["Title"] = "غير مصرح";
}
<div class="w-full min-h-screen flex flex-col items-center justify-center text-center" dir="rtl">
    <div class="text-4xl sm:text-5xl md:text-6xl text-emerald-600 font-bold mb-4 animate__animated animate__fadeIn">غير مسموح - 403</div>
    <p class="text-xl sm:text-2xl md:text-3xl text-gray-700 mb-6 animate__animated animate__fadeIn animate__delay-1s">
        عذرا، غير مصرح لك بدخول هذه الصفحة
    </p>
    <button class="bg-emerald-600 rounded text-white px-3 py-2 text-md sm:text-lg md:text-xl font-semibold transition-all duration-300 ease-in-out hover:bg-emerald-800 focus:outline-none focus:ring-2 focus:ring-emerald-500"
        id="goBack">
        العودة للخلف
    </button>
</div>

<style>
    body {
        overflow: hidden; /* Prevent any scrollbars from appearing */
    }
</style>







<script>
    document.getElementById("goBack").addEventListener("click", function () {
        window.history.back(); // Go back like the browser's back button
    });
</script>

